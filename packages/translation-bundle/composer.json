{
    "name": "runroom-packages/translation-bundle",
    "type": "symfony-bundle",
    "description": "Manage translations on the Sonata Admin interface",
    "keywords": [
        "translation",
        "symfony",
        "doctrine",
        "admin",
        "sonata"
    ],
    "homepage": "https://github.com/runroom/RunroomTranslationBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Runroom",
            "email": "software@runroom.com",
            "homepage": "https://www.runroom.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "a2lix/translation-form-bundle": "^2.4 || ^3.0",
        "doctrine/doctrine-bundle": "^2.1",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3 || ^2.0",
        "friendsofsymfony/ckeditor-bundle": "^1.2 || ^2.2",
        "knplabs/doctrine-behaviors": "^2.0.6",
        "sonata-project/admin-bundle": "^3.61",
        "symfony/config": "^4.4 || ^5.1",
        "symfony/dependency-injection": "^4.4 || ^5.1",
        "symfony/http-kernel": "^4.4 || ^5.1",
        "symfony/translation": "^4.4 || ^5.1",
        "symfony/twig-bundle": "^4.4 || ^5.1",
        "symfony/validator": "^4.4 || ^5.1",
        "symfony/yaml": "^4.4 || ^5.1",
        "twig/twig": "^2.12 || ^3.0"
    },
    "conflict": {
        "phpdocumentor/reflection-docblock": "<4.0.1"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^4.2",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "nelmio/alice": "^3.7",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.1.3",
        "runroom-packages/testing": "^0.8",
        "symfony/phpunit-bridge": "^5.1",
        "theofidry/alice-data-fixtures": "^1.2"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Runroom\\TranslationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Runroom\\TranslationBundle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
