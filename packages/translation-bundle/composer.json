{
    "name": "runroom-packages/translation-bundle",
    "description": "Manage translations on the Sonata Admin interface",
    "license": "MIT",
    "type": "symfony-bundle",
    "keywords": [
        "translation",
        "symfony",
        "doctrine",
        "admin",
        "sonata"
    ],
    "authors": [
        {
            "name": "Runroom",
            "email": "software@runroom.com",
            "homepage": "https://www.runroom.com"
        }
    ],
    "homepage": "https://github.com/runroom/RunroomTranslationBundle",
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.6",
        "doctrine/doctrine-bundle": "^2.10",
        "doctrine/orm": "^2.19 || ^3.2",
        "doctrine/persistence": "^3.1",
        "runroom-packages/doctrine-translatable-bundle": "^0.20",
        "symfony/asset": "^5.4 || ^6.4 || ^7.1",
        "symfony/config": "^5.4 || ^6.4 || ^7.1",
        "symfony/dependency-injection": "^5.4 || ^6.4 || ^7.1",
        "symfony/form": "^5.4 || ^6.4 || ^7.1",
        "symfony/http-kernel": "^5.4 || ^6.4 || ^7.1",
        "symfony/translation": "^5.4 || ^6.4 || ^7.1",
        "symfony/validator": "^5.4 || ^6.4 || ^7.1",
        "symfony/yaml": "^5.4 || ^6.4 || ^7.1",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "a2lix/auto-form-bundle": "^0.4",
        "a2lix/translation-form-bundle": "^3.2",
        "dama/doctrine-test-bundle": "^8.0",
        "friendsofsymfony/ckeditor-bundle": "^2.3",
        "knplabs/knp-menu-bundle": "^3.1",
        "matthiasnoback/symfony-config-test": "^5.1",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "phpunit/phpunit": "^9.6",
        "runroom-packages/testing": "^0.20",
        "sonata-project/admin-bundle": "^4.20",
        "sonata-project/doctrine-orm-admin-bundle": "^4.3",
        "symfony/framework-bundle": "^5.4 || ^6.4 || ^7.1",
        "symfony/phpunit-bridge": "^7.1",
        "symfony/security-bundle": "^5.4 || ^6.4 || ^7.1",
        "symfony/twig-bundle": "^5.4 || ^6.4 || ^7.1",
        "zenstruck/foundry": "^1.38.2 || ^2.0"
    },
    "conflict": {
        "a2lix/translation-form-bundle": "<3.2",
        "friendsofsymfony/ckeditor-bundle": "<2.3",
        "sonata-project/admin-bundle": "<4.20"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Runroom\\TranslationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Runroom\\TranslationBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.20-dev"
        }
    }
}
