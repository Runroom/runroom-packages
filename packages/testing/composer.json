{
    "name": "runroom-packages/testing",
    "type": "library",
    "description": "This library provides tools to help testing our bundles and projects",
    "keywords": [
        "testing",
        "doctrine",
        "fixtures",
        "integration",
        "phpunit"
    ],
    "homepage": "https://github.com/runroom/testing",
    "license": "MIT",
    "authors": [
        {
            "name": "Runroom",
            "email": "software@runroom.com",
            "homepage": "https://www.runroom.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "doctrine/data-fixtures": "^1.4",
        "doctrine/dbal": "^2.10",
        "doctrine/doctrine-bundle": "^2.1",
        "doctrine/orm": "^2.7",
        "phpunit/phpunit": "^9.1.3",
        "symfony/dependency-injection": "^4.4 || ^5.1",
        "symfony/framework-bundle": "^4.4 || ^5.1",
        "symfony/http-foundation": "^4.4.7 || ^5.1",
        "symfony/http-kernel": "^4.4 || ^5.1",
        "theofidry/alice-data-fixtures": "^1.2"
    },
    "conflict": {
        "fzaninotto/faker": "<1.9",
        "phpdocumentor/reflection-docblock": "<4.0.1"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^5.1"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.8-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Runroom\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Runroom\\Testing\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
