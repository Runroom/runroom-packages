{
    "name": "runroom-packages/testing",
    "description": "This library provides tools to help testing our bundles and projects",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "testing",
        "doctrine",
        "fixtures",
        "integration",
        "phpunit"
    ],
    "authors": [
        {
            "name": "Runroom",
            "email": "software@runroom.com",
            "homepage": "https://www.runroom.com"
        }
    ],
    "homepage": "https://github.com/runroom/testing",
    "require": {
        "php": "^8.1",
        "phpunit/phpunit": "^10.5",
        "symfony/dependency-injection": "^6.4 || ^7.1",
        "symfony/framework-bundle": "^6.4 || ^7.1",
        "symfony/http-foundation": "^6.4 || ^7.1",
        "symfony/http-kernel": "^6.4 || ^7.1"
    },
    "require-dev": {
        "doctrine/dbal": "^3.6 || ^4.0",
        "doctrine/doctrine-bundle": "^2.10",
        "doctrine/orm": "^2.19 || ^3.2",
        "knplabs/knp-menu-bundle": "^3.1",
        "sonata-project/admin-bundle": "^4.25",
        "sonata-project/doctrine-orm-admin-bundle": "^4.13",
        "symfony/phpunit-bridge": "^7.1",
        "symfony/security-bundle": "^6.4 || ^7.1",
        "symfony/stimulus-bundle": "^2.30",
        "symfony/twig-bundle": "^6.4 || ^7.1"
    },
    "autoload": {
        "psr-4": {
            "Runroom\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Runroom\\Testing\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.21-dev"
        }
    }
}
