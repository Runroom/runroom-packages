{
    "name": "runroom-packages/render-event-bundle",
    "description": "Add a render event before rendering templates",
    "license": "MIT",
    "type": "symfony-bundle",
    "keywords": [
        "render",
        "event",
        "twig",
        "symfony"
    ],
    "authors": [
        {
            "name": "Runroom",
            "email": "software@runroom.com",
            "homepage": "https://www.runroom.com"
        }
    ],
    "homepage": "https://github.com/runroom/RunroomRenderEventBundle",
    "require": {
        "php": "^8.1",
        "symfony/config": "^5.4 || ^6.4 || ^7.1",
        "symfony/dependency-injection": "^5.4 || ^6.4 || ^7.1",
        "symfony/error-handler": "^5.4 || ^6.4 || ^7.1",
        "symfony/event-dispatcher": "^5.4 || ^6.4 || ^7.1",
        "symfony/event-dispatcher-contracts": "^2.1 || ^3.0",
        "symfony/http-foundation": "^5.4 || ^6.4 || ^7.1",
        "symfony/http-kernel": "^5.4 || ^6.4 || ^7.1",
        "symfony/translation": "^5.4 || ^6.4 || ^7.1",
        "symfony/validator": "^5.4 || ^6.4 || ^7.1",
        "symfony/yaml": "^5.4 || ^6.4 || ^7.1",
        "twig/twig": "^3.14"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^5.1",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "phpunit/phpunit": "^9.6",
        "psr/event-dispatcher": "^1.0",
        "symfony/phpunit-bridge": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "Runroom\\RenderEventBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Runroom\\RenderEventBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.20-dev"
        }
    }
}
